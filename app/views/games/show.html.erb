<%= link_to 'Edit', edit_game_path(@game) %> 

<br>
Game Id Number : <%= @game.id%>
<br>
Players <br> 
<% @game.users.each do |p|%>
	<%= label_tag p.email%>
	<%= check_box_tag "user", p.email, false,
      data: {
        remote: true,
        url: "/make_drawer",
        method: "POST"
      } %>

<%end%>
<br>

<%= form_with(url: "/games/add_opp", method: "post") do %>
  <%= label_tag(:opp, "New player email:") %>
  <%= text_field_tag(:opp) %>
  <%= hidden_field_tag 'game', @game.id %>
  <%= submit_tag("Add") %>
<% end %>