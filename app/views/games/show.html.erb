<% if current_user == @game.users.first %>


	  <%= form_with(url: "/games/add_opp", method: "post") do %>
	  <%= label_tag(:opp, "New player email:") %>
	  <%= text_field_tag(:opp) %>
	  <%= hidden_field_tag 'game', @game.id %>
	  <%= submit_tag("Add") %>
	<% end %>


	Set Drawer <br> 

	<%= form_with(url: "/start", method: 'post') do %>
	  <% @game.users.each do |p| %>
	    		<%= label_tag p.email%>
				<%= check_box_tag "user", p.email, false %>
		      <br><br>
	  <% end %>
	  <%= submit_tag("Start!") %>



<% end %>





<% end %>





































